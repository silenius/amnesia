<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
    <channel>
        <title metal:define-slot="title">Belgian Biodiversity Platform</title>
        <link metal:define-slot="link">${cherrypy.request.base}${cherrypy.request.script_name}</link>
        <description metal:define-slot="description">The Belgian Biodiversity Platform provides services to the Belgian scientific community engaged in biodiversity research.</description>
        <language>en-us</language>
        <docs>http://www.rssboard.org/rss-specification</docs>
        <ttl>60</ttl>
        <generator>/usr/local/bin/python</generator>
        <webMaster>j.cigar@biodiversity.be</webMaster>
        <item tal:repeat="item items" metal:define-macro="items">
            <title metal:define-slot="title">${item.title}</title>
            <link>${item.url_for('show')}</link>
            <guid isPermaLink="true">${item.url_for('show')}</guid>
            <description>${item.description}</description>
            <pubDate>${item.added.strftime("%a, %d %b %Y %H:%M:%S GMT")}</pubDate>
        </item>
    </channel>
</rss>
