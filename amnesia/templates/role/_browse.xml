<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<?python
import json
?>
<response xmlns:tal="http://xml.zope.org/namespaces/tal" xmlns:metal="http://xml.zope.org/namespaces/metal" tal:define="page_total (meta.count / meta.limit if meta.count % meta.limit == 0 else meta.count / meta.limit + 1) ; page_current (meta.offset / meta.limit + 1);">

    <meta>
        <requested tal:condition="req">${json.dumps(request.GET.mixed())}</requested>
        <errors>
            <error tal:repeat="error errors | ()" level="${error.level}">${error.message}</error>
        </errors>
    </meta>

    <components tal:define="components components | ('main', 'pagination')">

        <main tal:condition="'main' in components" xmlns="http://www.w3.org/1999/xhtml">
            <tr data-obj="${h.dump_obj(content, 'json', include_columns=['id'], include_relations=False)}" tal:repeat="content data.roles">
                <td>
                    <input type="checkbox" data-purpose="select_object" />
                </td>
                <td class="bold">
                    ${content.name}
                </td>
                <td>
                    <i class="fas fa-lock" tal:condition="content.locked"></i>
                    <i class="fas fa-user-astronaut" tal:condition="content.virtual"></i>
                </td>
                <td class="bold">
                    <small>${content.description}</small>
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            actions
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li>
                                <a href="${request.resource_url(context, content.id, 'acls')}">Manage permissions</a>
                            </li>
                            <li tal:condition="not: content.virtual">
                                <a href="${request.resource_url(context, content.id, 'members')}">Manage members</a>
                            </li>
                            <li tal:condition="not: content.locked">
                                <a href="#" data-control="delete" type="button">Delete role</a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
        </main>

        <pagination tal:condition="'pagination' in components" xmlns="http://www.w3.org/1999/xhtml" count="${meta.count}" limit="${meta.limit}" offset="${meta.offset}" page_total="${page_total}" page_current="${page_current}">
            <metal:block use-macro="load: amnesia:templates/_pagination.pt" tal:define="offset meta.offset; count meta.count; limit meta.limit" />
        </pagination>

    </components>

</response>
