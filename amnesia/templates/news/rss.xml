<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
    <channel>
        <title>Belgian Biodiversity Platform news</title>
        <link>http://www.biodiversity.be/</link>
        <description>News published on the Belgian Biodiversity Platform portal (platform news, science news, newsflashes, etc).</description>
        <language>en-us</language>
        <docs>http://www.rssboard.org/rss-specification</docs>
        <generator>/usr/local/bin/python</generator>
        <item tal:repeat="item results">
            <title>${item.title}</title>
            <link>${item.url_for('show')}</link>
            <guid>${item.url_for('show')}</guid>
            <description>${item.description}</description>
            <pubDate>${item.added.strftime("%a, %d %b %Y %H:%M:%S GMT")}</pubDate>
        </item>
    </channel>
</rss>
