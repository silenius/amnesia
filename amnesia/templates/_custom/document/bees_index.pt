<metal:block use-macro="load: amnesia:templates/document/show.pt">
    <metal:block fill-slot="head-bottom">
    <style>
        .navbar .navbar-nav {
            display: inline-block;
            float: none;
            vertical-align: top;
        }

        .navbar .navbar-collapse {
            text-align: center;
        }

        .inner-banner {
            margin-bottom: 50px;
        }
    </style>
    </metal:block>
    <metal:block fill-slot="body" tal:define="settings request.registry.settings">
        <div class="row">
            <div class="col-md-12">
                ${structure: widgets.Tabs(request, int(settings['bees_root_id']),
                    template='amnesia:templates/_custom/widgets/bees_tabs.pt')}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                ${structure: widgets.BoxRow(request, int(settings['bees_box_row_id']))}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                ${structure: widgets.Slider1(request, int(settings['bees_slider1_id']))}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                ${structure: widgets.Slider2(request, int(settings['bees_slider2_id']))}
            </div>
        </div>
    </metal:block>
</metal:block>
